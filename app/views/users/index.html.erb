<h1 align="center">All Alpha-bloggers</h1>

<div align="center">
  <%= will_paginate renderer: BootstrapPagination::Rails %>

  <%= @users.each do |cadauser| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li><% link_to gravatar_for(cadauser), user_path(cadauser)%></li>
          <li class="article-title">
            <% link_to cadauser.username, user_path(cadauser) %>
          </li>
          <li><small><% pluralize(cadauser.articles.count, "article") if cadauser.articles %></small></li>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate renderer: BootstrapPagination::Rails %>
</div>
