<h1>List of articles</h1>

<p><%= link_to "Create new article", new_article_path %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |cadaarticle| %>
  <tr>
    <td> <%= cadaarticle.title %></td>
    <td> <%= cadaarticle.description %></td>
    <td> <%= link_to "Edit", edit_article_path(cadaarticle) %></td>
    <td> <%= link_to "Show", article_path(cadaarticle) %></td>
    <td> <%= link_to "Delete", article_path(cadaarticle), method: :delete, data: {confirm: "Are you sure you want to delete the article?"} %></td>
  </tr>
  <% end %>
</table>