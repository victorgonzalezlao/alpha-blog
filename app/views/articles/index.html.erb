<div class="container">
  <h1 align="center">List of articles</h1>

  <% @articles.each do |cadaarticle| %> <!--for each article it will create a row-->
    <div class="row"> <!--Creates a row-->
      <div class="col-xs-8 col-xs-offset-2"> <!--chooses the column in the row-->
        <div class="well well-lg"> <!--formats the row as a well-->
          <div class="article-title"> <!--creates a new class to edit the format in css.scss file-->
            <%= link_to cadaarticle.title, article_path(cadaarticle) %>
          </div>
          <div class="article-body">
            <%= truncate(cadaarticle.description, lenght: 100) %>
          </div>
          <div class="article-actions">
            <%= link_to "Edit", edit_article_path(cadaarticle), 
                                class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete", article_path(cadaarticle), 
                                method: :delete, data: {confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>